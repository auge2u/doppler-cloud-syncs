{
  "name": "doppler-cloud-syncs-functions",
  "version": "1.0.0",
  "description": "Firebase Functions with Doppler secrets management",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "eslint --ext .ts src/ --fix",
    "serve": "npm run build && doppler run -- firebase emulators:start --only functions",
    "shell": "npm run build && doppler run -- firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run build && firebase deploy --only functions",
    "deploy:dev": "../scripts/deploy-with-doppler.sh dev dev",
    "deploy:staging": "../scripts/deploy-with-doppler.sh stg staging",
    "deploy:prod": "../scripts/deploy-with-doppler.sh prd production",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.0"
  },
  "private": true
}
